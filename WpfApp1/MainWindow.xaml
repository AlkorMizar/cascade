<Window x:Name="w"
        x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1080"
        MouseLeftButtonDown="OnMouseDown" MouseLeftButtonUp="OnMouseUp" MouseMove="OnMouseMove">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF2F2F37" Offset="1"/>
            <GradientStop Color="#FF45464D" Offset="0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Canvas x:Name="canvas" Margin="10"
             Loaded="OnLoad"
            >
        <Image x:Name="img"/>
    </Canvas>
    
</Window>
